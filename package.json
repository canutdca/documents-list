    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-plugin-prettier": "^5.4.0",
    "happy-dom": "^17.4.7",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.6",
    "typescript": "~5.8.3",
